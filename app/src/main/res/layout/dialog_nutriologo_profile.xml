<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@color/button_primary">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivNutriologoFoto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="35dp"
                android:src="@drawable/default_profile"
                app:civ_border_color="@color/white"
                app:civ_border_width="4dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="60dp">

            <TextView
                android:id="@+id/tvNombreNutriologo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/tipo7"/>

            <LinearLayout
                style="@style/ProfileInfoRow">

                <ImageView
                    style="@style/ProfileInfoIcon"
                    android:src="@drawable/ic_especialidad"
                    app:tint="@color/button_primary"/>

                <TextView
                    android:id="@+id/tvAreaEspecializacion"
                    style="@style/ProfileInfoText"/>
            </LinearLayout>

            <LinearLayout
                style="@style/ProfileInfoRow">

                <ImageView
                    style="@style/ProfileInfoIcon"
                    android:src="@drawable/ic_experience"
                    app:tint="@color/button_primary"/>

                <TextView
                    android:id="@+id/tvAnosExperiencia"
                    style="@style/ProfileInfoText"/>
            </LinearLayout>

            <LinearLayout
                style="@style/ProfileInfoRow">

                <ImageView
                    style="@style/ProfileInfoIcon"
                    android:src="@drawable/ic_location"
                    app:tint="@color/button_primary"/>

                <TextView
                    android:id="@+id/tvDireccionClinica"
                    style="@style/ProfileInfoText"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>