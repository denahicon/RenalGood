<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d3d3d3"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro Nutri贸logo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/tipo3"
        android:textColor="#000000"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Contenedor para las fotos -->
    <LinearLayout
        android:id="@+id/photos_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Foto de perfil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto de Perfil"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/default_profile"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>

            <Button
                android:id="@+id/btn_tomar_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tomar foto de perfil"
                android:fontFamily="@font/tipo3"
                android:backgroundTint="@color/red"
                android:textColor="#000000"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Contenedor para identificaci贸n y selfie -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Identificaci贸n -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Identificaci贸n"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <ImageView
                    android:id="@+id/ivIdentificacion"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_add_photo"/>

                <Button
                    android:id="@+id/btnTomarIdentificacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tomar foto"
                    android:fontFamily="@font/tipo3"
                    android:backgroundTint="@color/red"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Selfie -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selfie"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <ImageView
                    android:id="@+id/ivSelfie"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_add_photo"/>

                <Button
                    android:id="@+id/btnTomarSelfie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tomar selfie"
                    android:fontFamily="@font/tipo3"
                    android:backgroundTint="@color/red"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Contenedor del formulario -->
    <LinearLayout
        android:id="@+id/form_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="24dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_pregunta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/et_respuesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:gravity="center"
            android:textAlignment="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_siguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:fontFamily="@font/tipo3"
        android:backgroundTint="@color/red"
        android:textColor="#000000"
        android:layout_marginTop="32dp"
        android:paddingHorizontal="48dp"/>

    <EditText
        android:id="@+id/et_mensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mensaje adicional (opcional)"
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_enviar_solicitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar Solicitud"
        android:visibility="gone" />

</LinearLayout>