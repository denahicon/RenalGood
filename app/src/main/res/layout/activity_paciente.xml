<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3d3d3">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/tvPerfilPaciente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil Paciente"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="@font/tipo1"
                android:textColor="#000000"
                android:layout_gravity="center"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivImagenPaciente"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/CircularImageView"/>

                    <TextView
                        android:id="@+id/tvNombrePaciente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:text="Nombre del Paciente"
                        android:textSize="20sp"
                        android:fontFamily="@font/tipo2"
                        android:textColor="#000000"
                        android:textStyle="bold"/>

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipEdad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            app:chipBackgroundColor="#FFFFFF"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipPeso"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            app:chipBackgroundColor="#FFFFFF"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipAltura"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            app:chipBackgroundColor="#FFFFFF"/>
                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/cardViewProfile">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/progressCalorias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        app:indicatorSize="120dp"
                        app:trackThickness="8dp"
                        app:trackColor="#E0E0E0"
                        app:indicatorColor="@color/red"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tvCaloriasValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/progressCalorias"
                        app:layout_constraintEnd_toEndOf="@id/progressCalorias"
                        app:layout_constraintStart_toStartOf="@id/progressCalorias"
                        app:layout_constraintTop_toTopOf="@id/progressCalorias"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="24dp"
                        app:layout_constraintStart_toEndOf="@id/progressCalorias"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            app:cardCornerRadius="8dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#E0E0E0">

                            <TextView
                                android:id="@+id/tvSituacionClinica"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="12dp"
                                android:textColor="#000000"
                                android:fontFamily="@font/tipo2"/>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            app:cardCornerRadius="8dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#E0E0E0">

                            <TextView
                                android:id="@+id/tvGFR"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="12dp"
                                android:textColor="#000000"
                                android:fontFamily="@font/tipo2"/>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnHistorial"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Historial"
                            android:textColor="#000000"
                            android:fontFamily="@font/tipo3"
                            android:textSize="14sp"
                            app:cornerRadius="8dp"
                            android:backgroundTint="@color/red"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:weightSum="6">

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:src="@drawable/ic_home"
            android:contentDescription="Inicio" />

        <ImageView
            android:id="@+id/ivLupa"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:src="@drawable/ic_search"
            android:contentDescription="Buscar" />

        <ImageView
            android:id="@+id/ivChef"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:src="@drawable/ic_menu"
            android:contentDescription="Recetas" />

        <ImageView
            android:id="@+id/ivMensaje"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:src="@drawable/ic_message"
            android:contentDescription="Mensajes" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivCarta"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_emaill"
                android:contentDescription="Notificaciones" />

            <ImageView
                android:id="@+id/ivNotificacion"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/ic_notification_dot"
                android:visibility="gone"
                android:layout_gravity="top|end"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"/>
        </FrameLayout>

        <ImageView
            android:id="@+id/ivCalendario"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:src="@drawable/ic_calendar"
            android:contentDescription="Calendario" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>