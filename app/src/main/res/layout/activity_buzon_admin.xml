<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3d3d3"
    android:fitsSystemWindows="true"
    tools:context=".admin.BuzonAdminActivity">

    <LinearLayout
        android:id="@+id/layoutTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buzón"
            android:fontFamily="@font/tipo1"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutTitulo"
        android:layout_above="@id/bottomNav"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutPacientes"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#DBC8CE">

            <TextView
                android:id="@+id/tvPacientes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pacientes"
                android:fontFamily="@font/tipo3"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewPacientes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <LinearLayout
            android:id="@+id/layoutNutriologos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#DBC8CE">

            <TextView
                android:id="@+id/tvNutriologos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nutriólogos"
                android:fontFamily="@font/tipo3"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewNutriologos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:elevation="8dp"
        android:gravity="center">

<ImageView
    android:id="@+id/ivHome"
    android:layout_width="0dp"
    android:layout_height="24dp"
    android:layout_weight="1"
    android:src="@drawable/ic_home"
    android:layout_gravity="center" />

<ImageView
    android:id="@+id/ivCedulas"
    android:layout_width="0dp"
    android:layout_height="24dp"
    android:layout_weight="1"
    android:src="@drawable/cedulas"
    android:layout_gravity="center" />

<ImageView
    android:id="@+id/ivEmail"
    android:layout_width="0dp"
    android:layout_height="24dp"
    android:layout_weight="1"
    android:src="@drawable/ic_email"
    android:layout_gravity="center" />

<ImageView
    android:id="@+id/ivAddRecipe"
    android:layout_width="0dp"
    android:layout_height="24dp"
    android:layout_weight="1"
    android:src="@drawable/ic_menu"
    android:layout_gravity="center" />
</LinearLayout>
</RelativeLayout>